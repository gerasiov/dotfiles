export DEBFULLNAME="Alexander GQ Gerasiov"
export DEBEMAIL="gq@debian.org"

export PATH="$PATH:/usr/local/sbin/:/sbin:/usr/sbin"
[ -d /usr/lib/ccache ] && PATH=/usr/lib/ccache:"${PATH}"
[ -d ~/bin ] && PATH=~/bin:"${PATH}"
[ -d /snap/bin ] && PATH="${PATH}":/snap/bin

export TZ="Asia/Jerusalem"
command -v less > /dev/null && export PAGER='less'
command -v vim > /dev/null && export EDITOR='vim'

export GREP_COLORS='1;32'
export LESS='-R -M --shift 5'
export LESSHISTFILE="$HISTDIR/less"

command -v lesspipe > /dev/null && eval $(lesspipe)
command -v dircolors > /dev/null && eval $(dircolors)

